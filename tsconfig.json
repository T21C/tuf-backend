{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.d.ts"
  ],
  "files.exclude": {
    "node_modules": true
  },
  "search.exclude": {
    "node_modules": true
  },
  "files.watcherExclude": {
    "node_modules/**": true
  }
}
