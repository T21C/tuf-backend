{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "files.exclude": {
    "node_modules": true
  },
  "search.exclude": {
    "node_modules": true
  },
  "files.watcherExclude": {
    "node_modules/**": true
  }
}
